<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proximity.Pages.SidebarPage"
             Title="SidebarPage"            
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid ColumnDefinitions="250,*">

        <!-- Left Sidebar - Fixed -->
        <Border Grid.Column="0"
                Background="{DynamicResource SidebarBackgroundColor}"
                Padding="0"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 0,15,0,15">

            <Grid RowDefinitions="Auto,*,Auto">

                <!-- Sidebar Header -->
                <Border Grid.Row="0" 
                        Padding="20,10,20,0"
                        StrokeShape="RoundRectangle 0"
                        StrokeThickness="0"
                        Background="{DynamicResource HeaderBackgroundColor}">

                    <VerticalStackLayout Spacing="0">
                        <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                            <Border Background="{DynamicResource PrimaryColor}"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    Padding="0"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 5">
                                <Label Text="PS" 
                                       FontSize="18"    
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                <Label Text="Proximity" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Label Text="Offline LAN Communication App" 
                                       FontSize="10" 
                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <!-- User Role Badge -->
                        <Border Background="{DynamicResource CardBackgroundColor}"
                                Padding="10,5,10,5"
                                StrokeShape="RoundRectangle 7.5"
                                StrokeThickness="0"
                                Margin="0,5">

                            <HorizontalStackLayout Spacing="8" VerticalOptions="Center" >
                                <Label Text="ðŸ‘¤" FontSize="14"/>
                                <Label Text="Duck Species"                                       
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource PrimaryColor}"/>
                            </HorizontalStackLayout>
                        </Border>

                        <BoxView HeightRequest="1" Color="{DynamicResource BorderColor}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Navigation Menu -->
                <ScrollView Grid.Row="1" Padding="12,8">
                    <VerticalStackLayout Spacing="2">

                        <!-- MAIN Section -->
                        <Label Text="Main Menu" Style="{StaticResource SidebarSectionHeader}"/>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToDashboardCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ“Š" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <Label Text="Dashboard" Style="{StaticResource SidebarItemText}" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToDiscoverCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ " FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <Label Text="Discover" Style="{StaticResource SidebarItemText}" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>

                        <!-- FEATURES Section -->
                        <Label Text="Features" Style="{StaticResource SidebarSectionHeader}" Margin="12,16,12,4"/>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToContactsCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ“¦" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Contacts" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="Revenue overview   " FontSize="10" TextColor="{DynamicResource SecondaryTextColor}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToRoomsCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ›’" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Rooms" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="Potential Customers" FontSize="10" TextColor="{DynamicResource SecondaryTextColor}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToAuditoriumCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ“ˆ" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Auditorium" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="Product Costs" FontSize="10" TextColor="{DynamicResource SecondaryTextColor}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                  

                        

                     

                       

                        <!-- SYSTEM Section -->
                        <Label Text="SYSTEM" Style="{StaticResource SidebarSectionHeader}" Margin="12,16,12,4"/>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToUsersCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ‘¨â€ðŸ’¼" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Users" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="User management" FontSize="10" TextColor="{DynamicResource SecondaryTextColor}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToSettingsCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="âš™ï¸" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Settings" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="System configuration" FontSize="10" TextColor="{DynamicResource SecondaryTextColor}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                    </VerticalStackLayout>
                </ScrollView>

                <!-- Sidebar Footer -->
                <Border Grid.Row="2" StrokeThickness="0" Padding="20,0,20,10" StrokeShape="RoundRectangle 0"
                        Background="{DynamicResource HeaderBackgroundColor}">
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                        <BoxView HeightRequest="1" Color="{DynamicResource BorderColor}"/>

                        <Border Background="Transparent" Padding="0" StrokeThickness="0">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding IsDarkMode}" FontSize="16" VerticalOptions="Center" TextColor="{DynamicResource SecondaryTextColor}" />
                                <Label Text="Dark Mode" FontSize="12" TextColor="{DynamicResource PrimaryTextColor}" VerticalOptions="Center" />
                                <Switch IsToggled="{Binding IsDarkMode}" OnColor="{DynamicResource Primary}" ThumbColor="White" VerticalOptions="Center" Scale="0.7"/>
                            </HorizontalStackLayout>
                        </Border>

                        <HorizontalStackLayout Spacing="5" Padding="5">
                            <Label Text="âœ“" FontSize="10" TextColor="{StaticResource Success}" VerticalOptions="Center"/>
                            <Label Text="v1.0.0 â€¢ LAN Ready" FontSize="10" TextColor="{DynamicResource TertiaryTextColor}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

            </Grid>
        </Border>

        <!-- Right Content Area -->
        <ContentView Grid.Column="1" x:Name="ContentArea" />

    </Grid>

</ContentPage>