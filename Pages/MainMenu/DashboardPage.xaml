<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proximity.Pages.MainMenu.DashboardPage"
             Title="Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Welcome Section with Connection Status -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                    <HorizontalStackLayout Grid.Row="0" Spacing="10">
                        <Label Text="Welcome to Proximity"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>

                        <!-- Live Connection Indicator -->
                        <Border WidthRequest="12" HeightRequest="12" 
                                StrokeShape="RounddRectangle 6"
                                BackgroundColor="{DynamicResource SuccessColor}"
                                VerticalOptions="Center">
                            <Border.Triggers>
                                <DataTrigger TargetType="Border" 
                                           Binding="{Binding IsConnected}" 
                                           Value="False">
                                    <Setter Property="BackgroundColor" Value="{DynamicResource DangerColor}"/>
                                </DataTrigger>
                            </Border.Triggers>
                        </Border>
                    </HorizontalStackLayout>

                    <Label Grid.Row="1"
                           Text="{Binding WelcomeMessage}"
                           FontSize="16"
                           TextColor="{DynamicResource SecondaryTextColor}"/>

                    <!-- Quick Status Bar -->
                    <HorizontalStackLayout Grid.Row="2" Spacing="15" Margin="0,10,0,0">
                        <Label Text="{Binding ConnectionStatus}"
                               FontSize="13"
                               TextColor="{DynamicResource SuccessColor}"/>
                        <Label Text="â€¢" TextColor="{DynamicResource TertiaryTextColor}"/>
                        <Label Text="{Binding LastActivityTime}"
                               FontSize="13"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!-- Statistics Grid -->
            <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="Auto,Auto"
                  ColumnSpacing="15"
                  RowSpacing="15">

                <!-- Connected Peers with Animation Pulse -->
                <Border Grid.Row="0" Grid.Column="0"
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        Stroke="{DynamicResource PrimaryColor}"
                        StrokeThickness="2"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToDiscoverCommand}"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸ‘¥"
                               FontSize="32"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding ConnectedPeersCount}"
                               FontSize="28"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource PrimaryColor}"/>
                        <Label Text="Connected Peers"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                        <Label Text="Tap to manage"
                               FontSize="11"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Discovered Peers -->
                <Border Grid.Row="0" Grid.Column="1"
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        Stroke="{DynamicResource SecondaryColor}"
                        StrokeThickness="2"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToDiscoverCommand}"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸ”"
                               FontSize="32"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding DiscoveredPeersCount}"
                               FontSize="28"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource SecondaryColor}"/>
                        <Label Text="Discovered"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                        <Label Text="Tap to view"
                               FontSize="11"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Messages Sent -->
                <Border Grid.Row="1" Grid.Column="0"
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        Stroke="{DynamicResource AccentColor}"
                        StrokeThickness="2"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToContactsCommand}"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸ’¬"
                               FontSize="32"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding MessagesSentCount}"
                               FontSize="28"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource AccentColor}"/>
                        <Label Text="Messages Sent"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                        <Label Text="Tap to chat"
                               FontSize="11"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Voice Status -->
                <Border Grid.Row="1" Grid.Column="1"
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        Stroke="{DynamicResource SuccessColor}"
                        StrokeThickness="2"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸŽ¤"
                               FontSize="32"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding VoiceStatus}"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource SuccessColor}"/>
                        <Label Text="Voice Service"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Recent Activity Feed -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">
                    <Label Text="Recent Activity"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <CollectionView ItemsSource="{Binding RecentActivities}"
                                   EmptyView="No recent activity"
                                   HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8" ColumnSpacing="12" ColumnDefinitions="Auto,*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding Icon}"
                                           FontSize="20"/>
                                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                                        <Label Text="{Binding Message}"
                                               FontSize="13"
                                               TextColor="{DynamicResource PrimaryTextColor}"/>
                                        <Label Text="{Binding TimeAgo}"
                                               FontSize="11"
                                               TextColor="{DynamicResource TertiaryTextColor}"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Quick Actions -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">
                    <Label Text="Quick Actions"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                        <Button Grid.Row="0" Grid.Column="0"
                                Text="ðŸ” Discover"
                                Command="{Binding NavigateToDiscoverCommand}"/>

                        <Button Grid.Row="0" Grid.Column="1"
                                Text="ðŸ’¬ Chat"
                                Command="{Binding NavigateToContactsCommand}"/>

                        <Button Grid.Row="1" Grid.Column="0"
                                Text="ðŸ  Rooms"
                                Command="{Binding NavigateToRoomsCommand}"/>

                        <Button Grid.Row="1" Grid.Column="1"
                                Text="ðŸ”„ Refresh"
                                Command="{Binding RefreshCommand}"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Network Info -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="10">
                    <Label Text="Network Information"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <Grid ColumnSpacing="10" RowSpacing="8"
                          ColumnDefinitions="Auto,*"
                          RowDefinitions="Auto,Auto,Auto,Auto">

                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Your ID:"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding LocalPeerId}"
                               TextColor="{DynamicResource PrimaryTextColor}" />

                        <Label Grid.Row="1" Grid.Column="0"
                               Text="Username:"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding Username}"
                               TextColor="{DynamicResource PrimaryTextColor}" />

                        <Label Grid.Row="2" Grid.Column="0"
                               Text="Status:"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        <Label Grid.Row="2" Grid.Column="1"
                               Text="{Binding ConnectionStatus}"
                               TextColor="{DynamicResource SuccessColor}" />

                        <Label Grid.Row="3" Grid.Column="0"
                               Text="Uptime:"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        <Label Grid.Row="3" Grid.Column="1"
                               Text="{Binding Uptime}"
                               TextColor="{DynamicResource PrimaryTextColor}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>