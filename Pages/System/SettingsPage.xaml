<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proximity.Pages.System.SettingsPage"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- User Settings -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">
                    <Label Text="User Settings"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Username"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                        <Entry Text="{Binding Username}"
                               Placeholder="Enter your username"
                               FontSize="16"/>
                    </VerticalStackLayout>

                    <Button Text="Save Username"
                            Command="{Binding SaveUsernameCommand}"
                            HorizontalOptions="End"/>
                </VerticalStackLayout>
            </Border>

            <!-- Appearance -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">
                    <Label Text="Appearance"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="Dark Mode"
                               FontSize="16"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Switch IsToggled="{Binding IsDarkMode}"
                                HorizontalOptions="End"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Audio Settings -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">
                    <Label Text="Audio Settings"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <!-- Input Device -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Input Device (Microphone)"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                        <Picker ItemsSource="{Binding InputDevices}"
                                ItemDisplayBinding="{Binding Name}"
                                SelectedItem="{Binding SelectedInputDevice}"
                                Title="Select microphone"
                                FontSize="14"/>
                    </VerticalStackLayout>

                    <!-- Output Device -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Output Device (Speaker)"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                        <Picker ItemsSource="{Binding OutputDevices}"
                                ItemDisplayBinding="{Binding Name}"                                
                                SelectedItem="{Binding SelectedOutputDevice}"
                                Title="Select speaker"
                                FontSize="14"/>
                    </VerticalStackLayout>

                    <!-- Loopback Test -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Microphone Test"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>

                        <HorizontalStackLayout Spacing="10">
                            <Button Text="{Binding LoopbackButtonText}"
                                    Command="{Binding ToggleLoopbackCommand}"
                                    HorizontalOptions="Start"
                                    Padding="15,8"/>

                            <Label Text="{Binding LoopbackStatus}"
                                   VerticalOptions="Center"
                                   FontSize="14"
                                   TextColor="{DynamicResource SuccessColor}"/>
                        </HorizontalStackLayout>

                        <Label Text="Click 'Start Test' to hear your microphone through speakers. Speak to test if your microphone is working."
                               FontSize="12"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                    </VerticalStackLayout>

                    <!-- Push-to-Talk -->
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="Push-to-Talk Mode"
                               FontSize="16"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Switch IsToggled="{Binding IsPushToTalk}"
                                HorizontalOptions="End"/>
                    </HorizontalStackLayout>

                    <Label Text="When enabled, you must hold the microphone button to talk. When disabled, voice is continuous."
                           FontSize="12"
                           TextColor="{DynamicResource TertiaryTextColor}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Network Settings -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20" 
                    StrokeShape ="RoundRectangle 12">       

                <VerticalStackLayout Spacing="15">
                    <Label Text="Network Information"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}" />

                    <Grid ColumnDefinitions="Auto,*"
                          RowDefinitions="Auto,Auto,Auto,Auto"
                          RowSpacing="10"
                          ColumnSpacing="15">
                        
                        <!-- Discovery Port -->
                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="Discovery Port:"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        <Label Grid.Row="0" Grid.Column="1" 
                               Text="9001 (UDP)"
                               TextColor="{DynamicResource PrimaryTextColor}" />
                        
                        <!-- Chat Port -->
                        <Label Grid.Row="1" Grid.Column="0" 
                               Text="Chat Port:"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        <Label Grid.Row="1" Grid.Column="1" 
                               Text="9002 (TCP)"
                               TextColor="{DynamicResource PrimaryTextColor}" />
                        
                        <!-- Voice Port -->
                        <Label Grid.Row="2" Grid.Column="0" 
                               Text="Voice Port:"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        <Label Grid.Row="2" Grid.Column="1" 
                               Text="9003 (UDP)"
                               TextColor="{DynamicResource PrimaryTextColor}" />
                        
                        <!-- Local Peer ID -->
                        <Label Grid.Row="3" Grid.Column="0" 
                               Text="Your ID:"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        <Label Grid.Row="3" Grid.Column="1" 
                               Text="{Binding LocalPeerId}"
                               TextColor="{DynamicResource PrimaryTextColor}" />
                    </Grid>
                </VerticalStackLayout>                
            </Border>

            <!-- About -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="10">
                    <Label Text="About Proximity"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <Label Text="Version 1.0.0"
                           FontSize="14"
                           TextColor="{DynamicResource SecondaryTextColor}"/>

                    <Label Text="Offline LAN Communication App"
                           FontSize="14"
                           TextColor="{DynamicResource SecondaryTextColor}"/>

                    <Label Text="Built with .NET MAUI"
                           FontSize="14"
                           TextColor="{DynamicResource SecondaryTextColor}"/>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>