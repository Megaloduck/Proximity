<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proximity.Pages.System.ProfilePage"
             Title="Profile">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Profile Header -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource PrimaryColor}"
                    StrokeThickness="2"
                    Padding="30">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">
                    <Label Text="Your Profile Card"
                           FontSize="22"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <Label Text="This is how other users will see you when they discover you on the network"
                           FontSize="13"
                           HorizontalOptions="Center"
                           TextColor="{DynamicResource SecondaryTextColor}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Profile Customization -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout >
                    <Label Text="Customize Your Card"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <!-- Display Name -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Display Name"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                        <Entry Text="{Binding DisplayName, Mode=TwoWay}"
                               Placeholder="Enter your display name (e.g., ricky)"
                               FontSize="16"
                               MaxLength="30"
                               TextChanged="OnProfileChanged"/>
                        
                        <Label Text="{Binding DisplayNameLength, StringFormat='{0}/30 characters'}"
                               FontSize="11"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                    </VerticalStackLayout>

                    <!-- Status Message -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Status Message"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                        <Entry Text="{Binding StatusMessage, Mode=TwoWay}"
                               Placeholder="What's on your mind? (e.g., just thinking)"
                               FontSize="14"
                               MaxLength="60"
                               TextChanged="OnProfileChanged"/>

                        <Label Text="{Binding StatusMessageLength, StringFormat='{0}/60 characters'}"
                               FontSize="11"
                               TextColor="{DynamicResource TertiaryTextColor}"/>
                    </VerticalStackLayout>

                    <!-- Avatar Emoji -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Avatar Icon"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>

