                                    Text="ðŸŽ¨" Command="{Binding SelectEmojiCommand}" CommandParameter="ðŸŽ¨"
                                    WidthRequest="50" HeightRequest="50" Margin="2"/>
                        </FlexLayout>
                    </VerticalStackLayout>

                    <!-- Save Button -->
                    <Button Text="Save Profile"
                            Command="{Binding SaveProfileCommand}"
                            Margin="0,10,0,0"
                            HorizontalOptions="Fill"
                            Style="{StaticResource HoverButtonStyle}" />
                </VerticalStackLayout>
            </Border>


            <!-- PROFILE PREVIEW -->
            <!-- PROFILE PREVIEW -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
        Stroke="{DynamicResource BorderColor}"
        StrokeThickness="1"
        Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">
                    <Label Text="Live Preview"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="{DynamicResource PrimaryTextColor}"/>

                    <Label Text="This is how your card will appear in the Discover page:"
               FontSize="13"
               TextColor="{DynamicResource SecondaryTextColor}"/>

                    <!-- Preview Card -->
                    <Border BackgroundColor="{DynamicResource PageBackgroundColor}"
                Stroke="{DynamicResource PrimaryColor}"
                StrokeThickness="2"
                Padding="15"
                Margin="0,10,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">

                            <!-- Avatar -->
                            <Border Grid.Column="0"
                        WidthRequest="60"
                        HeightRequest="60"
                        Padding="0"
                        Background="{DynamicResource PrimaryColor}"
                        VerticalOptions="Start">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Label x:Name="PreviewEmoji"
                           Text="{Binding SelectedEmoji}"
                           FontSize="32"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                            </Border>

                            <!-- Info -->
                            <VerticalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                                <Label x:Name="PreviewName"
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                                <Label x:Name="PreviewStatus"
                           FontSize="14"
                           TextColor="{DynamicResource SecondaryTextColor}"/>

                                <Label Text="ðŸŸ¢ Online"
                           FontSize="12"
                           TextColor="{DynamicResource SuccessColor}"/>
                            </VerticalStackLayout>

                        </Grid>
                    </Border>

                    <!-- Helpful hint -->
                    <Border BackgroundColor="#FFF3CD"
                Stroke="#FFECB3"
                StrokeThickness="1"
                Padding="12"
                Margin="0,5,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ’¡" FontSize="16" VerticalOptions="Center"/>
                            <Label FontSize="12" TextColor="#856404" VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Tip: " FontAttributes="Bold"/>
                                        <Span Text="Your preview updates as you type! Don't forget to click 'Save Profile' when done."/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Border>


            <!-- USER ID INFO -->
            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    Padding="20"
                    StrokeShape="RoundRectangle 12">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Your Information"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <Grid ColumnDefinitions="Auto,*"
                          RowDefinitions="Auto,Auto"
                          RowSpacing="8"
                          ColumnSpacing="10">

                        <Label Text="User ID:"
                               Grid.Row="0" Grid.Column="0"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                        <Label Text="{Binding LocalPeerId}"
                               Grid.Row="0" Grid.Column="1"
                               TextColor="{DynamicResource PrimaryTextColor}"/>

                        <Label Text="Account Created:"
                               Grid.Row="1" Grid.Column="0"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                        <Label Text="{Binding AccountCreated}"
                               Grid.Row="1" Grid.Column="1"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                    </Grid>

                </VerticalStackLayout>

            </Border>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>