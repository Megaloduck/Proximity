<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Proximity.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Proximity.Pages"
    xmlns:mainmenu="clr-namespace:Proximity.Pages.MainMenu"
    xmlns:system="clr-namespace:Proximity.Pages.System"
    xmlns:local="clr-namespace:Proximity"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="Proximity">

    <!-- LOGIN PAGE -->
    <ShellContent Route="LoginPage"
               ContentTemplate="{DataTemplate pages:LoginPage}" />

    <!-- SIDEBAR -->
    <ShellContent Route="SidebarPage"
               ContentTemplate="{DataTemplate pages:SidebarPage}" />

</Shell>
