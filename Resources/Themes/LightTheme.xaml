<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proximity.Resources.Themes.LightTheme">
    
    <!-- Background Colors -->
    <Color x:Key="PageBackgroundColor">#FAFAFB</Color>
    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
    <Color x:Key="HeaderBackgroundColor">#e4e5f1</Color>
    <Color x:Key="SidebarBackgroundColor">#E1E1E1</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#1C1C1E</Color>
    <Color x:Key="SecondaryTextColor">#5F6368</Color>
    <Color x:Key="TertiaryTextColor">#9CA3AF</Color>

    <!-- Accent Colors -->
    <Color x:Key="PrimaryColor">#1D9BF0</Color>
    <Color x:Key="SecondaryColor">#22C55E</Color>
    <Color x:Key="AccentColor">#F59E0B</Color>
    <Color x:Key="DangerColor">#EF4444</Color>
    <Color x:Key="SuccessColor">#16A34A</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#d2d3db</Color>
    <Color x:Key="DividerColor">#F1F3F5</Color>

    <!-- Button Colors -->
    <Color x:Key="ButtonBackgroundColor">#1D9BF0</Color>
    <Color x:Key="ButtonTextColor">#FFFFFF</Color>
    <Color x:Key="HoverButton">#F0F0F0</Color>

    <!-- Category Badge -->
    <Color x:Key="BadgeBackgroundColor">#E0F2FE</Color>
    <Color x:Key="BadgeTextColor">#0369A1</Color>

    <!-- Shadow -->
    <Color x:Key="ShadowColor">#33000000</Color>

</ResourceDictionary>