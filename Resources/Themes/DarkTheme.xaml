<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proximity.Resources.Themes.DarkTheme">
    
    <!-- Background Colors -->
    <Color x:Key="PageBackgroundColor">#121212</Color>
    <Color x:Key="CardBackgroundColor">#1E1E1E</Color>
    <Color x:Key="HeaderBackgroundColor">#1A1A1A</Color>
    <Color x:Key="SidebarBackgroundColor">#1E1E1E</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#B0B0B0</Color>
    <Color x:Key="TertiaryTextColor">#808080</Color>

    <!-- Accent Colors -->
    <Color x:Key="PrimaryColor">#64B5F6</Color>
    <Color x:Key="SecondaryColor">#66BB6A</Color>
    <Color x:Key="AccentColor">#FFA726</Color>
    <Color x:Key="DangerColor">#EF5350</Color>
    <Color x:Key="SuccessColor">#66BB6A</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#2C2C2C</Color>
    <Color x:Key="DividerColor">#2C2C2C</Color>

    <!-- Button Colors -->
    <Color x:Key="ButtonBackgroundColor">#64B5F6</Color>
    <Color x:Key="ButtonTextColor">#000000</Color>
    <Color x:Key="HoverButton">#0F0F0F</Color>

    <!-- Category Badge -->
    <Color x:Key="BadgeBackgroundColor">#1E3A5F</Color>
    <Color x:Key="BadgeTextColor">#64B5F6</Color>

    <!-- Shadow -->
    <Color x:Key="ShadowColor">#60000000</Color>
</ResourceDictionary>